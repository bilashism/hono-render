{
  "name": "hono-backend",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.5.2+sha512.da9dc28cd3ff40d0592188235ab25d3202add8a207afbedc682220e4a0029ffbff4562102b9e6e46b4e3f9e8bd53e6d05de48544b0c57d4b0179e22c76d1199b",
  "engines": {
    "node": "^22.14.0",
    "pnpm": "^10.5.2"
  },
  "scripts": {
    "gen-cert": "mkcert -key-file key.pem -cert-file cert.pem localhost 127.0.0.1 ::1 \"*.localhost\"",
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "lint:types": "tsc -p tsconfig.json --noEmit",
    "db:dbml": "pnpm exec tsx src/db/generate-dbml.ts",
    "db:generate": "pnpx @better-auth/cli generate --output ./src/db/auth.ts --y && pnpm drizzle-kit generate",
    "db:migrate": "pnpm run db:generate && pnpm drizzle-kit migrate"
  },
  "dependencies": {
    "@date-fns/tz": "^1.4.1",
    "@hono/node-server": "^1.19.7",
    "@hono/zod-openapi": "^1.2.0",
    "@react-email/render": "^2.0.0",
    "@scalar/hono-api-reference": "^0.9.30",
    "better-auth": "^1.4.9",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.2.3",
    "dotenv-expand": "^12.0.3",
    "drizzle-orm": "^0.45.1",
    "googleapis": "^169.0.0",
    "hono": "^4.11.2",
    "hono-pino": "^0.10.3",
    "lodash": "^4.17.21",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "react": "^19.2.3",
    "resend": "^6.6.0",
    "socket.io": "^4.8.3",
    "stripe": "^20.1.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@mkcert/node": "^0.1.3",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}